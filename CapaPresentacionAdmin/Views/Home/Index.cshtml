@{
    ViewBag.Title = "Home Page";
}

<h1 class="text-center" style="margin-top: 50px">Home</h1>


<div class="row">
    <hr />
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Modelos</h6>
                        <h6 id="totalModelos">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-shoe-prints fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Colores</h6>
                        <h6 id="totalColores">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-palette fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Empleados</h6>
                        <h6 id="totalEmpleados">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        jQuery.ajax({
            url: '@Url.Action("VistaDashboard","Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                var objeto = data;
                $("#totalModelos").text(objeto.TotalModelos);
                $("#totalColores").text(objeto.TotalColores);
                $("#totalEmpleados").text(objeto.TotalEmpleados);
            }
        });
    </script>
}
